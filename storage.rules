rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow writes to the gallery folder for any authenticated user.
    // The page itself is protected by admin-only access rules.
    match /gallery/{allPaths=**} {
      allow write: if request.auth != null;
    }

    // Public read access for all gallery images.
    match /gallery/{allPaths=**} {
      allow read;
    }
  }
}
