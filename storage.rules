rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {

    // Helpers
    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return isSignedIn() &&
             exists(/databases/(default)/documents/users/$(request.auth.uid)) &&
             get(/databases/(default)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }

    // ðŸ“‚ Galeria - leitura pÃºblica, escrita sÃ³ por admin
    match /gallery/{fileName} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // ðŸ“‚ Imagem de perfil
    match /profile-images/{userId} {
      allow read: if true;
      allow write: if isSignedIn() && request.auth.uid == userId;
    }

    // ðŸ“‚ Fotos de agendamento
    match /appointments/{allPaths=**} {
      // UsuÃ¡rio sÃ³ pode salvar/ler se o caminho do arquivo comeÃ§ar com o UID dele
      allow read, write: if isSignedIn() && request.resource.name.matches('^projects/_/buckets/[^/]+/objects/appointments/' + request.auth.uid + '.*');

      // Admin pode tudo
      allow read, write: if isAdmin();
    }
  }
}
