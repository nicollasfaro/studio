rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Combina as regras de leitura e escrita para a pasta da galeria.
    match /gallery/{allPaths=**} {
      // Qualquer pessoa pode ler as imagens (necessário para exibi-las no site).
      allow read;
      // Apenas usuários autenticados (administradores, neste caso) podem enviar,
      // atualizar ou deletar imagens.
      allow write: if request.auth != null;
    }
  }
}
